# ============================================================================
# PrimePath Environment Configuration Template
# Updated by Phase 8 Configuration Cleanup - 2025-08-13
# ============================================================================
# Copy this file to .env and update with your environment-specific values
# ============================================================================

# Django Core Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1
ENVIRONMENT=production

# Database Configuration
DB_ENGINE=django.db.backends.sqlite3  # Use postgresql for production
DB_NAME=db.sqlite3  # or primepath_db for PostgreSQL
DB_USER=primepath_user
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432
# For PostgreSQL URL format (optional):
# DATABASE_URL=postgres://user:password@host:port/dbname

# Security Settings - PHASE 8 ENHANCED
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_SECURE=True
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@primepath.com

# Media and Static Files
MEDIA_ROOT=media
STATIC_ROOT=staticfiles
STATIC_URL=/static/
MEDIA_URL=/media/

# Application Settings
ADMIN_URL=admin/
TIME_ZONE=UTC
LANGUAGE_CODE=en-us

# Feature Flags - PHASE 8 EXPANDED
ENABLE_DIFFICULTY_ADJUSTMENT=True
ENABLE_AUDIO_SUPPORT=True
ENABLE_AUTO_GRADING=True
ENABLE_API_V2=True
ENABLE_ADVANCED_MONITORING=True
ENABLE_PHONE_VALIDATION=True
FEATURE_FLAGS_ENABLE_API_V2=True

# Cache Configuration (optional)
CACHE_BACKEND=django.core.cache.backends.redis.RedisCache
CACHE_LOCATION=redis://127.0.0.1:6379/1
CACHE_TIMEOUT=300

# Logging Configuration - PHASE 8 ENHANCED
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO
LOG_FILE_PATH=logs/primepath.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Phase 8 Console Monitoring
PHASE8_MONITORING_ENABLED=True
CONSOLE_LOG_LEVEL=INFO
TRACK_DATABASE_QUERIES=False
TRACK_TEMPLATE_RENDERING=False
TRACK_STATIC_SERVING=False
PRESERVE_RELATIONSHIPS=True

# Celery Configuration (optional)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://your-frontend-domain.com
CORS_ALLOW_CREDENTIALS=True

# API Settings
API_RATE_LIMIT=1000/hour
API_TIMEOUT=30
API_MAX_PAGE_SIZE=100

# File Upload Limits
FILE_UPLOAD_MAX_MEMORY_SIZE=5242880  # 5MB
DATA_UPLOAD_MAX_MEMORY_SIZE=5242880  # 5MB
MAX_UPLOAD_SIZE=52428800  # 50MB

# Session Configuration
SESSION_COOKIE_AGE=86400  # 24 hours
SESSION_EXPIRE_AT_BROWSER_CLOSE=False
SESSION_SAVE_EVERY_REQUEST=False

# Custom Application Settings
EXAM_TIME_LIMIT_MINUTES=120
MAX_QUESTIONS_PER_EXAM=100

# Development Tools (Set to False in production)
ENABLE_DEBUG_TOOLBAR=False
ENABLE_SILK_PROFILING=False
SHOW_SQL_QUERIES=False

# Sentry Configuration (optional - for error tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# ============================================================================
# IMPORTANT SECURITY NOTES:
# ============================================================================
# 1. NEVER commit the actual .env file to version control
# 2. Generate a new SECRET_KEY for production using:
#    python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
# 3. Use strong, unique passwords for all services
# 4. Regularly rotate sensitive credentials
# 5. Use environment-specific .env files (.env.development, .env.production)
# 6. All SECURE_* settings should be True in production
# 7. DEBUG must be False in production
# ============================================================================